<!DOCTYPE html>
<html lang="hu">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Foglalás</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
<div class="container mt-5">
    <h1>Foglalás</h1>

    <% if (errors && errors.length > 0) { %>
    <div class="alert alert-danger">
        <ul>
            <% errors.forEach(function(error) { %>
                <li><%= error.message %></li>
            <% }) %>
        </ul>
    </div>
    <% } %>

    <form action="/booking" method="post">
        <div class="mb-3">
            <label for="name" class="form-label">Név</label>
            <input type="text" class="form-control" id="name" name="name" required>
        </div>

        <div class="mb-3">
            <label for="email" class="form-label">E-mail cím</label>
            <input type="email" class="form-control" id="email" name="email" required>
        </div>

        <div class="mb-3">
            <label for="date" class="form-label">Dátum és időpont</label>
            <input type="datetime-local" class="form-control" id="date" name="date" required>
        </div>

        <div class="mb-3">
            <label for="guests" class="form-label">Vendégek száma</label>
            <input type="number" class="form-control" id="guests" name="guests" min="1" max="10" required>
        </div>

        <button type="submit" class="btn btn-primary">Foglalás</button>
    </form>
</div>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
